// Online C compiler to run C program online
#include <stdio.h>
int main() {
    int n;
    int i;
    int ne;
    int pos;
printf("enter the size  elements of an array in ascending order\n ");
scanf("%d", &n);
int arr[n];
printf("enter the elements in ascending order\n");
for(int i=0;i<n;i++)
{
    
    printf("elements  %d",i+1);
    scanf(" %d" ,&arr[i]);
    
}

for(i=0;i<n;i++)
{
    printf("%d\n",arr[i]);
}
printf("enter a new element to be inserted\n");
scanf("%d", &ne);
for(pos =0;pos<n;pos++)
{
    if(arr[pos]>ne)
    break;
}
for(i=n;i>pos;i--)
{
    arr[i]=arr[i-1];
}
arr[pos]=ne;
n++;
 printf("Array after insertion:\n");
    for (i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}
