#include <stdio.h>
#include <string.h> 
#include <ctype.h>  

int main() {
    char str[100]; 
    int count = 0; 
    int consonants=0;
    int vowels=0;
    int i;

    printf("Enter a string: ");
    scanf("%s", str);

     for (i = 0; str[i] != '\0'; i++) {
        char ch = tolower(str[i]); 

        
        if (ch >= 'a' && ch <= 'z')
        {
        
            if (ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u') {
                vowels++;
            } else
            { 
                
                consonants++;
            }
        }
        
    }

    printf("Number of Vowels: %d\n", vowels);
    printf("Number of Consonants: %d\n", consonants);

    return 0;
}

