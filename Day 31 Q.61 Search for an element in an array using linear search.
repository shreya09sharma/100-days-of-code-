// Online C compiler to run C program online
#include <stdio.h>

int main() {
    // Write C code here
    int n;
    int target=0;
    int found=0;
    int i;
printf("enter the elements of an array");
scanf("%d", &n);
int arr[n];
for(int i=0;i<n;i++)
{
    printf("elements %d",i+1);
    scanf("%d" ,&arr[i]);
    
}
printf("the target value to be searched");
scanf("%d", &target);

for(i=0;i<n;i++)
{
    printf("%d", arr[i]);
    if(arr[i]==target)
    {

        found=1;
        break;
    }
}
    if(found==1)
    {
        printf("%d found at position %d (index %d).\n", target, i + 1, i);
    }
    else
    {
        printf("%d not found in array", target);
    }

    return 0;
}
    
    
