#include <stdio.h>

int main() {
    int n;
printf("enter the size of an array\n");
scanf("%d", &n);
int arr[n];
for(int i=0;i<n;i++)
{
    printf("elements %d=",i+1);
    scanf("%d",&arr[i]);
    
}
printf("\n The elements of array are\n");
for(int i=0;i<n;i++)
{
    printf("%d\n",arr[i]);
}
int sum=0;
for(int i=0;i<n;i++)
{
    sum=sum+arr[i];
}
int p=-1;
int leftsum=0;
for(int i=0;i<n;i++)
{
    int rightsum=sum-leftsum-arr[i];
    if(leftsum==rightsum)
    {
        p=i;
        break;
    }
    leftsum=leftsum+arr[i];
    
}
printf("Pivot index: %d\n", p);

    return 0;
}
