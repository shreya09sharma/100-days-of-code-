#include <stdio.h>

int main()
{
    int n;
printf("enter the size of an array\n");
scanf("%d", &n);
int arr[n];
for(int i=0;i<n;i++)
{
    printf("elements %d = ",i+1);
    scanf("%d",&arr[i]);
    
}
int k;
printf("enter the value of k\n");
scanf("%d", &k);
for(int i=0;i <n-1; i++)
    {
        for(int j=0;j <n-1-i; j++)
        {
            if(arr[j] > arr[j+1])
            {
                
                int temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }
     printf("The %dth smallest element is %d\n", k, arr[k - 1]);
    return 0;
}
