#include <stdio.h>

int main() {
     long long num, reversed = 0;

    printf("Enter a binary number: ");
    scanf("%lld", &num);  

    
    long long temp = num;
    while (temp > 0) {
        reversed = reversed * 10 + (temp % 10);
        temp = temp / 10;
    }

    
    printf("1's Complement: ");
    while (reversed > 0) {
        int digit = reversed % 10;

        
        if (digit == 0)
            printf("1");
        else if (digit == 1)
            printf("0");
        else {
            
            printf("\nInvalid binary digit detected.\n");
            return 1;
        }

        reversed = reversed / 10;
    }

    printf("\n");
   
    return 0;
}
