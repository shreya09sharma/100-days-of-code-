#include <stdio.h>

int main() {
    FILE *fp;
    int n, i;
    char name[50];
    int roll, marks;

    // Ask how many students
    printf("Enter number of students: ");
    scanf("%d", &n);

    // Open file in write mode
    fp = fopen("students.txt", "w");
    if (fp == NULL) {
        printf("Error! Could not create file.\n");
        return 1;
    }

    // Input student details and write to file
    for (i = 0; i < n; i++) {
        printf("\nEnter details for student %d\n", i + 1);
        printf("Name: ");
        scanf("%s", name);  // For simplicity, single-word names
        printf("Roll Number: ");
        scanf("%d", &roll);
        printf("Marks: ");
        scanf("%d", &marks);

        fprintf(fp, "%s %d %d\n", name, roll, marks);
    }

    fclose(fp);

    printf("\nStudent records saved successfully!\n");

    // Open file in read mode
    fp = fopen("students.txt", "r");
    if (fp == NULL) {
        printf("Error! Could not open file.\n");
        return 1;
    }

    printf("\nReading student records from file:\n");

    // Read and display student records
    while (fscanf(fp, "%s %d %d", name, &roll, &marks) == 3) {
        printf("Name: %s | Roll: %d | Marks: %d\n", name, roll, marks);
    }

    fclose(fp);

    return 0;
}
