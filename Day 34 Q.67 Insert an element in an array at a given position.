// Online C compiler to run C program online
#include <stdio.h>

int main() {
    // Write C code here
    int n;
    int i;
    int ne;
    int pos;
    int k;
printf("enter the size  elements of an array in ascending order\n ");
scanf("%d", &n);
int arr[n];
printf("enter the elements in ascending order\n");
for(int i=0;i<n;i++)
{
    
    printf("elements  %d=",i+1);
    scanf(" %d" ,&arr[i]);
    
}

for(i=0;i<n;i++)
{
    printf("%d\n",arr[i]);
}
printf("enter the value of k at which the element is to be inserted\n");
scanf("%d", &k);
if(k < 0 || k > n)
{
        printf("Invalid position! Must be between 0 and %d\n", n);
        return 1;
    }
printf("enter a new element to be inserted\n");
scanf("%d", &ne);
for(k =0;k<n;k++)
{
    if(arr[k]>ne)
    break;
}
for(i=n;i>k;i--)
{
    arr[i]=arr[i-1];
}
arr[k]=ne;
n++;
 printf("Array after insertion:\n");
    for (i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}
