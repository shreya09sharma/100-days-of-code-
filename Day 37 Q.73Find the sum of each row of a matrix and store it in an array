// Online C compiler to run C program online
#include <stdio.h>
int main() {
    int r,c;
    int j;
    int i;
    int sum=0;
printf("enter the number of rows\n");
scanf("%d", &r);
printf("enter the number of coloumns\n");
scanf("%d", &c);
int arr[r][c];
int rowsum[r];
for(int i=0;i<r;i++)
{
    int sum=0;
    for(int j=0;j<c;j++)

    {
    printf("elements [%d][%d]=",i,j);
    scanf("%d",&arr[i][j]);
    sum=sum+arr[i][j];
    }
    rowsum[i]=sum;
    
}
 printf("\nSum of each row:\n");
    for (int i = 0; i < r; i++) 
    {
        printf("Row %d sum = %d\n", i, rowsum[i]);
    }
    return 0;
}
