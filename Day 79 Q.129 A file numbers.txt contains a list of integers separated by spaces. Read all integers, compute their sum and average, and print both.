#include <stdio.h>

int main() {
    FILE *fp;
    char filename[50];
    int num;
    int sum = 0, count = 0;
    double average;

    
    printf("Enter filename: ");
    scanf("%s", filename);

    
    fp = fopen(filename, "r");
    if (fp == NULL) {
        printf("Error: File not found!\n");
        return 1;
    }

    
    while (fscanf(fp, "%d", &num) == 1) {
        sum += num;
        count++;
    }

    fclose(fp);

    if (count == 0) {
        printf("No integers found in the file.\n");
    } else {
        average = (double)sum / count;
        printf("Sum = %d\n", sum);
        printf("Average = %.2f\n", average);
    }

    return 0;
}
