// Online C compiler to run C program online
#include <stdio.h>
#include <string.h>
int main() 
{
    int n=0,x=0,max=1;
    char temp[100],word[100];
    char string[200];
    printf("Enter the word 1");
    scanf("%[^\n]",&string);
    for(int i=0;i<=strlen(string);i++)
    {
        if(string[i]==' ' || string[i]=='\0')
        {
            x=0;
            for(int j=n;j<i;j++)
            {
                temp[x]=string[j];
                x++;
            }
            temp[x]='\0';
            n=i+1;
            printf("%s\n",temp);
            if(max<strlen(temp))
            {
                max=strlen(temp);
                for(int k=0;k<strlen(temp);k++)
                {
                    word[k]=temp[k];
                }
            }
            
        }
    }
    printf("%d%s",max,word);
    return 0;
}
