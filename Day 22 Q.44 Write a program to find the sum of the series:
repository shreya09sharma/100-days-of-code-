#include <stdio.h>

int main() {
    // Write C code here
    int n, i;
    double sum = 0.0;

    printf("Enter the number of terms (n): ");
    scanf("%d", &n);


    if (n >= 1) {
        sum += 1.0; 
    }

    for (i = 2; i <= n; i++) 
    {
        sum += (double)(2 * i - 1) / (2 * i);
    }

    printf("Approximate sum: %.1lf\n", sum);

    return 0;
}
