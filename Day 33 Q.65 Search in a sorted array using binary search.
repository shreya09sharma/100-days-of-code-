// Online C compiler to run C program online
#include <stdio.h>


int main() {
    // Write C code here
    int n;
    int first=0;
int last;
    int mid=0;
    int flag=0;
    int i;
    int ns;
    
printf("enter the size  elements of an array in ascending order\n ");
scanf("%d", &n);
int arr[n];
printf("enter the elements in ascending order\n");
for(int i=0;i<n;i++)
{
    
    printf("elements  %d",i+1);
    scanf(" %d" ,&arr[i]);
    
}

for(i=0;i<n;i++)
{
    printf("%d\n",arr[i]);
}
printf("enter the number to be searched\n");
scanf("%d", &ns);
last=n-1;
while(first<=last)
{
    mid=((first + last)/2);
    if(arr[mid]<ns)
    {
        first=mid+1;
    }
    else if(arr[mid]>ns)
    {
        last=mid -1;
    }
    else if (arr[mid]==ns)
    {
        flag=1;
        break;
    }
    
}
    if(flag==1)
    {
         printf("\n%d found at position %d (index %d).\n", ns, mid + 1, mid);
    }
    else{
          printf("\n%d not found in the array.\n", ns);
    }


    return 0;
}
    
