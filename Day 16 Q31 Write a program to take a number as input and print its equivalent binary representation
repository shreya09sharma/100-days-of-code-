#include <stdio.h>

int main() {
    int num;

    printf("Enter an integer: ");
    scanf("%d", &num);

    
    if (num == 0) {
        printf("Binary representation: 0\n");
        return 0;
    }

    
    int mask = 1 << 31;  // Start from the highest bit (assuming 32-bit int)
    int started = 0;     // Flag to skip leading zeros

    printf("Binary representation: ");
    for (int i = 0; i < 32; i++) {
        if ((num & mask) != 0) {
            started = 1;
            printf("1");
        } else if (started) {
            printf("0");
        }
        mask >>= 1;  // Shift mask to the right
    }

    printf("\n");
    return 0;
}
