#include <stdio.h>
int main() {
   int p,t;
   float si,r;
   float ci;
   int a;
   printf("\n enter the amount");
   scanf("%d",&a);
   printf("\n enter the principle amount");
   scanf("%d",&p);
   printf("\n enter rate ");
   scanf("%f",&r);
   printf("\n enter the time");
   scanf("%d",&t);
   si=(p*r*t)/100;
   ci=a-p;
   printf("simple interest  %f\n",si);
   printf("compound interest %f\n",ci);
   return 0;
}
